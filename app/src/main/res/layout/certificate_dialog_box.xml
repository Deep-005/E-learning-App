<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="8dp"
    android:background="@drawable/prompt_card_bg"
    android:layout_marginHorizontal="@dimen/_15sdp"
    android:padding="16dp">

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/claim_your_certificate_dialog"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="@font/google_sans_medium"
        android:textSize="18sp"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/certificatePreview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:elevation="8dp"
            android:layout_marginHorizontal="@dimen/_25sdp"
            android:src="@drawable/image_certificate"
            android:contentDescription="@string/logo" />

    </LinearLayout>

    <Button
        android:id="@+id/claim"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/_55sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:text="@string/claim_now"
        android:textStyle="bold"
        android:backgroundTint="@color/selected"
        android:textColor="@color/white" />

</LinearLayout>